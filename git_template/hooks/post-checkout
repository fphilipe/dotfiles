#!/usr/bin/env bash

git submodule status \
  | while read -r sha submodule rest; do
      if [[ "$(git diff -- "$submodule")" = *-dirty ]]; then
        echo "Submodule path '$submodule': dirty, not updating"
      elif [[ "$sha" = [-+]* ]]; then
        git submodule update --init -- "$submodule"
      fi
    done
